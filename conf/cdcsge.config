                time   = { check_max( 8.h                 , 'time'    ) }
                clusterOptions = { "-l h_vmem=${task.memory.toString().replaceAll(/[\sB]/,'')}" }
            }

            withName:FASTQCTRIMD {
                queue = 'all.q'
                cpus   = { check_max( 2                   , 'cpus'    ) }
                memory = { check_max( 6.GB  * task.attempt, 'memory'  ) }
