    withName: PROKKA {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/annotation" },
            mode: 'copy',
            pattern: "*.{faa,gff,fna}"
        ]
    }

    withName: GET_TAXA_FOR_AMRFINDER {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/AMRFinder" },
            mode: 'copy',
            pattern: "*_AMRFinder_Organism.csv"
        ]
    }

    withName: AMRFINDERPLUS_RUN {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/AMRFinder" },
            mode: 'copy',
            pattern: "*.{tsv}"
        ]
