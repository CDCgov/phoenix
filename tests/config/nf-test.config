params {
    publish_dir_mode                  = "copy"
    singularity_pull_docker_container = false
    test_data_base                    = 'https://raw.githubusercontent.com/CDCgov/oamd-bio-test-data/modules'
    modules_testdata_base_path        = 'https://raw.githubusercontent.com/CDCgov/oamd-bio-test-data/modules/data'
    nfcore_test_data_base             = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules'
    nfcore_modules_testdata_base_path = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data'
}

profiles {
    conda {
        conda.enabled           = true
        conda.channels          = ['conda-forge', 'bioconda']
        apptainer.enabled       = false
    }
    mamba {
        conda.enabled           = true
        conda.useMamba          = true
    }
    docker {
        docker.enabled         = true
        conda.enabled          = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        apptainer.enabled      = false
        docker.runOptions      = '-u $(id -u):$(id -g)'
    }
    docker_self_hosted {
        docker.enabled          = true
        docker.fixOwnership     = true
        docker.runOptions       = '--platform=linux/amd64'
    }
    arm {
        docker.runOptions       = '-u $(id -u):$(id -g) --platform=linux/amd64'
    }
    singularity {
        singularity.enabled     = true
        singularity.autoMounts  = true
        conda.enabled           = false
        docker.enabled          = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    podman {
        podman.enabled          = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
        podman.runOptions       = '-u $(id -u):$(id -g) --userns=keep-id --cgroups=disabled'
    }
    shifter {
        shifter.enabled         = true
    }
    charliecloud {
        charliecloud.enabled    = true
    }
    apptainer {
        apptainer.enabled       = true
        apptainer.autoMounts    = true
    }
    wave {
        apptainer.ociAutoPull   = true
        singularity.ociAutoPull = true
        wave.enabled            = true
        wave.freeze             = true
        wave.strategy           = 'conda,container'
    }
    gitpod {
        executor.name           = 'local'
        executor.cpus           = 4
        executor.memory         = 8.GB
    }
    gpu {
        docker.runOptions       = '-u $(id -u):$(id -g) --gpus all'
        apptainer.runOptions    = '--nv'
        singularity.runOptions  = '--nv'
    }
}

// Increase time available to build Conda environment
conda { createTimeout = "120 min" }

// Load test_data.config containing paths to test data
// includeConfig 'test_data.config'

manifest {
    nextflowVersion = '!>=24.10.2'
}
trace {
    enabled = false
}
docker.registry      = 'quay.io'
podman.registry      = 'quay.io'
singularity.registry = 'quay.io'
