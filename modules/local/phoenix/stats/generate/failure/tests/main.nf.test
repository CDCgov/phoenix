nextflow_process {

    name "Test Process GENERATE_PIPELINE_STATS_FAILURE"
    script "../main.nf"
    process "GENERATE_PIPELINE_STATS_FAILURE"

    test("generate pipeline stats failure") {

        when {
            process {
                """
                // define inputs of the process here. Example:
                input[0] = [
                    [id: 'test'],
                    file(params.modules_testdata_base_path + '/genomics/bacterial/reports/test_raw_read_counts.txt'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/reports/test_trimmed_read_counts.txt'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/kraken2/test.kraken2_trimd.summary.txt'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/krona/test_trimd.html'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/kraken2/test_failure.kraken2_trimd.top_kraken_hit.txt'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/taxa/test.tax'),
                    ["run_failure"]
                ]
                input[1] = '30'
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.versions).match()
            assert (process.out.pipeline_stats).size() > 0
        }

    }

    test("generate pipeline stats failure -stub") {

        options '-stub'

        when {
            process {
                """
                // define inputs of the process here. Example:
                input[0] = [
                    [id: 'test'],
                    file(params.modules_testdata_base_path + '/genomics/bacterial/reports/test_raw_read_counts.txt'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/reports/test_trimmed_read_counts.txt'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/kraken2/test.kraken2_trimd.summary.txt'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/krona/test_trimd.html'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/kraken2/test_failure.kraken2_trimd.top_kraken_hit.txt'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/taxa/test.tax'),
                    ["run_failure"]
                ]
                input[1] = '30'
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.versions).match()
            assert (process.out.pipeline_stats).size() > 0
        }

    }

}
