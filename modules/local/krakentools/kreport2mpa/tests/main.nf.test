nextflow_process {

    name "Test Process KRAKENTOOLS_KREPORT2MPA"
    script "../main.nf"
    process "KRAKENTOOLS_KREPORT2MPA"

    tag "modules"
    tag "krakentools"
    tag "krakentools/kreport2mpa"

    test("kreport2mpa [trimd summary]") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_sample' ], // meta map
                    file(params.modules_testdata_base_path + '/genomics/bacterial/kraken2/test.kraken2_trimd.report.txt')
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("kreport2mpa [trimd summary] - stub") {

        options '-stub'

        when {
            process {
                """
                input[0] = [
                    [ id:'test_sample' ], // meta map
                    file(params.modules_testdata_base_path + '/genomics/bacterial/kraken2/test.kraken2_trimd.report.txt')
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
