nextflow_process {

    name "Test Process GET_MLST_SRST2"
    script "../main.nf"
    process "GET_MLST_SRST2"


    setup {
        run("UNTAR", alias: "UNTAR_MLSTDB") {  // Use consistent naming here
            script "../../../../ph-core/untar/main.nf"
            process {
                """
                input[0] = Channel.of([
                    [],
                    file(
                        params.modules_testdata_base_path + '/genomics/bacterial/genome/mlst_db.tar.gz'
                    )
                ])
                """
            }
        }
    }

    test("mlst srst2") {

        when {
            process {
                """
                // define inputs of the process here. Example:
                input[0] = [
                    [id: 'test'],
                    file(params.modules_testdata_base_path + '/genomics/bacterial/taxa/test.tax'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/mlst/test_status.txt'),
                ]
                input[1] = UNTAR_MLSTDB.out.untar.map{ it[1] }
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("mlst srst2 - stub") {

        options '-stub'

        when {
            process {
                """
                // define inputs of the process here. Example:
                input[0] = [
                    [id: 'test'],
                    file(params.modules_testdata_base_path + '/genomics/bacterial/taxa/test.tax'),
                    file(params.modules_testdata_base_path + '/genomics/bacterial/mlst/test_status.txt'),
                ]
                input[1] = UNTAR_MLSTDB.out.untar.map{ it[1] }
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }
}
