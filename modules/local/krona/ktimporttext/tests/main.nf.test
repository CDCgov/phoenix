nextflow_process {

    name "Test Process KRONA_KTIMPORTTEXT"
    script "../main.nf"
    process "KRONA_KTIMPORTTEXT"

    tag "modules"
    tag "krona"
    tag "krona/ktimporttext"

    test ("sarscov2 - metagenome - kraken report") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [id: 'test'],
                    file(params.nfcore_modules_testdata_base_path + '/genomics/sarscov2/metagenome/test_1.kraken2.report.txt', checkIfExists: true),
                ])
                input[1] = "trimd"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot ( process.out.versions ).match() },
                { assert file(process.out.html.get(0).get(1)).exists() }
            )
        }
    }

    test ("sarscov2 - metagenome - kraken report - stub") {

        options '-stub'
        when {
            process {
                """
                input[0] = Channel.of([
                    [id: 'test'],
                    file(params.nfcore_modules_testdata_base_path + '/genomics/sarscov2/metagenome/test_1.kraken2.report.txt', checkIfExists: true),
                ])
                input[1] = "trimd"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot ( process.out.versions ).match() },
                { assert file(process.out.html.get(0).get(1)).exists() }
            )
        }
    }
}
